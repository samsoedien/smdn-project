{
  "private": true,
  "name": "smdn-project",
  "version": "1.0.0",
  "description": "Fullstack web application using react frontend and express backend",
  "main": "index.js",
  "repository": "https://github.com/samsoedien/smdn-project.git",
  "author": "Nathan Samsoedien <contact@samsoedien.com> (https://samsoedien.com)",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn lerna run start --stream",
    "build": "yarn lerna run build --stream",
    "lint": "eslint \"./packages/**/*.{js,jsx,ts,tsx}\""
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "commitlint": "^11.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.16.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.6",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "commit-msg": "commitlint -E  HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "./packages/**/*.{js,jsx,ts,tsx}": [
      "yarn --silent lint --fix"
    ]
  }
}
